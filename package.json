{
  "name": "event-manager",
  "version": "2.0.0",
  "description": "Event Manager API with comprehensive security features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "local": "./scripts/start-local.sh",
    "local:stop": "./scripts/stop-local.sh",
    "test": "cross-env NODE_ENV=test DB_DIALECT=sqlite jest --runInBand",
    "docker:start": "./scripts/start.sh",
    "docker:stop": "./scripts/stop.sh",
    "docker:logs": "docker compose logs -f app",
    "docker:restart": "docker compose restart app",
    "docker:clean": "docker compose down -v --rmi all",
    "test:api": "./scripts/test-api.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeleginSergey/event-manager.git"
  },
  "keywords": [
    "event-management",
    "api",
    "nodejs",
    "express",
    "security",
    "jwt",
    "docker",
    "postgresql"
  ],
  "author": "Sergey Telegin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TeleginSergey/event-manager/issues"
  },
  "homepage": "https://github.com/TeleginSergey/event-manager#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "^5.0.1",
    "xss": "^1.0.14",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ]
  }
}
